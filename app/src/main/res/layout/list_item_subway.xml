<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_subway_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_subway_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京区(190)"
                android:textColor="@color/color_6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_subway_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="82344 / 2014336"
                android:textColor="@color/color_6"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_subway_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="地下通衢肇始燕，铁流暗涌古城垣。北畅南达东西贯，京都旧貌换新颜。"
            android:textColor="@color/color_9"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_subway_moderator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版主: hat600, changeup"
                android:textColor="@color/color_9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_subway_last_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="1 分钟前 北京地铁九号线"
                android:textColor="@color/color_9"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>